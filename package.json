{
   "name": "@mariozechner/babbletui",
   "version": "0.1.0",
   "description": "Minimal TUI library for chat interfaces",
   "author": "Mario Zechner",
   "type": "module",
   "main": "./dist/index.js",
   "types": "./dist/index.d.ts",
   "bin": "./dist/cli.js",
   "files": [
      "dist"
   ],
   "scripts": {
      "clean": "rm -rf dist",
      "build": "tsc",
      "dev": "tsx watch src/index.ts",
      "test": "vitest",
      "format": "biome format --write .",
      "lint": "biome lint .",
      "check": "npm run format && npm run lint && npm run test -- --run && tsc --noEmit",
      "prepare": "husky"
   },
   "devDependencies": {
      "@biomejs/biome": "^2.2.6",
      "@types/node": "^24.5.2",
      "husky": "^9.1.7",
      "tsx": "^4.20.6",
      "typescript": "^5.9.3",
      "vitest": "^3.2.4"
   },
   "dependencies": {
      "chalk": "^5.6.2",
      "marked": "^16.4.1"
   }
}
